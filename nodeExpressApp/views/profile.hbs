<h1>{{title}}</h1>
<h4>Change profile picture for
    {{selectedUser.firstName}} {{selectedUser.lastName}}</h4>

<form action="/users/upload" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="userID" value="{{selectedUser._id}}" readonly />
    <input type="file" name="simpleFile" />
    <button type="submit" class="btn btn-success">Upload!</button>
</form>
